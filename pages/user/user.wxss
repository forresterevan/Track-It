/* pages/user/user.wxss */
.profile {
  display: flex;
  align-items: center;
}
.container-tabs {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0;
}

.card-white {
  background: white;
  border-radius: 4px;
  display: flex;
  padding: 24rpx;
  box-sizing: border-box;
  margin: 48rpx 0;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.25);
}

.card-logo {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  border-radius: 4px;
  margin-right: 16rpx;
}

.content {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 0;
  margin-left: 6px;
}

.card-title {
  font-family: 'Roboto';
  font-size: 20px;
  color: #00AD59;
  overflow: hidden;
  width: 100%;
  line-height: 24px;
  /* margin-bottom: 8px; */
}
.card-company {
  font-family: 'Roboto';
  font-size: 16px;
}

.card-city {
  font-family: 'Roboto';
  font-size: 16px;
}

.card-salary {
  font-family: 'Roboto';
  font-size: 16px;
}

.card-salary {
  font-family: 'Roboto';
  font-size: 16px;
}









.tab-active {
  color: green;
}

.avatar {
  border-radius: 5px 5px 0 0;
  min-width: 100px;
  max-width: 100px;
  min-height: 100px;
  max-height: 100px;
}
.username {
  font-size: 28px;
  height: 100px; 
  display: flex;
  align-items: center;
  margin-left: 16px;
}

.card-body {
  font-size: 20px;
}





