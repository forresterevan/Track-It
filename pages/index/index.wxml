    <button type="primary" bindtap="navigateToPost">Post a Job</button>
    <picker bindchange="bindPickerChange" value="{{jobs}}" range="{{jobsLocation}}">
      <view class="filter-bar">Filter{{Location[jobs]}}</view>
      <!-- <view class="current-filter"> Currently selected: {{title[jobs]}}</view> -->
    </picker>
  </view>
    
  <view wx:for="{{jobs}}" wx:for-item="job">
    <view class="card-white" bindtap="navigateToShow" data-id="{{job.id}}">
      <image src="{{job.logo.path}}" class="logo" mode="aspectFit"></image>
      <view class="content">
        <view class="city">{{job.city}}</view>
        <view class="job-description">{{job.description}}</view>
      </view>
    </view>
  </view>
</view>

